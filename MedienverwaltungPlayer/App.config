    <root>
      <level value="DEBUG"/>
      <appender-ref ref="ConsoleAppender"/>
    </root>
 
    <logger name="Namespace.Class">
      <level value="INFO"/>
      <appender-ref ref="ConsoleAppender"/>
    </logger>
 
  </log4net>
  
  
    <startup> 
        
    <supportedRuntime version="v2.0.50727"/></startup>

    <applicationSettings>
        <MedienverwaltungPlayer.Properties.Settings>
            <setting name="vlcLocation" serializeAs="String">
                <value>C:\Program Files (x86)\VideoLAN\VLC\vlc.exe</value>
            </setting>
        </MedienverwaltungPlayer.Properties.Settings>
    </applicationSettings>
</configuration>
